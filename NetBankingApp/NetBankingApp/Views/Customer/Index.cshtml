@model NetBankingApp.Models.Customer

@{
    ViewBag.Title = "Index";
}

<h2>Account Details</h2>

<div class="panel-footer row">
    <div class="col-xs-6 text-left">
        <a class="btn btn-default" href="@Url.Action("WithdrawAmount", "Customer", new { id = Model.AccountNumber })" role="button">Withdraw money</a>
        <a class="btn btn-default" href="@Url.Action("TransferAmount", "Customer", new { id = Model.AccountNumber })" role="button">Send money</a>
    </div>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AccountBalance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccountBalance)
        </dd>

    </dl>

</div>
<div class="panel-footer row">
    <div class="col-xs-6 text-left">
        <a class="btn btn-default" href="@Url.Action("CustomerLogin", "Login")" role="button">Logout</a>

    </div>
</div>
